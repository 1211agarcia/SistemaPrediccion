                <i class="ion ion-ios-book-outline"></i>
              </div>
              Ir</a>
          </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
          <!-- small box -->
          <div class="small-box bg-green">
            <a href="{{ path('ejercicio_index')}}" class="small-box-footer">
              <div class="inner">
                <h3>{{ contenido['ejercicios'] }}{#<sup style="font-size: 20px">%</sup>#}</h3>
