        <script src="{{asset('bundles/app/angularjs/angular.min.js')}}"></script>
        <script src="{{asset('bundles/app/plugins/angular-loading-bar/loading-bar.min.js') }}"></script>
        {#<!-- Bootstrap 3.3.5 -->#}
        <script src="{{asset('bundles/app/bootstrap/js/bootstrap.min.js')}}"></script>
        {#<!-- FastClick -->}#}
        <script src="{{asset('bundles/app/plugins/fastclick/fastclick.min.js')}}"></script>
        {#<!-- AdminLTE App -->#}
        <script src="{{asset('bundles/app/dist/js/app.min.js')}}"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>    
        {% endblock %} 
    </body>
</html>
