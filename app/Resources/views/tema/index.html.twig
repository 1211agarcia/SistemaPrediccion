{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tema list</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tema in temas %}
            <tr>
                <td><a href="{{ path('tema_show', { 'id': tema.id }) }}">{{ tema.id }}</a></td>
                <td>{{ tema.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('tema_show', { 'id': tema.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('tema_edit', { 'id': tema.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tema_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

{% endblock %}